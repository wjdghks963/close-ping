{
  "compilerOptions": {
    "target": "ES6",
    "module": "ES6",
    "strict": true,
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./dist/types",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"],
      "@core/*": ["src/core/*"]
    }
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
